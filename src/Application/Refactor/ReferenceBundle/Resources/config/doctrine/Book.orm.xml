<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Refactor\ReferenceBundle\Entity\Book" table="reference__book">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <indexes>
      <index name="search_idx" columns="title"/>
    </indexes>
    <field name="title" type="string" column="title" length="255"/>
    <field name="clientName" type="string" column="client_name" length="255"/>
    <field name="projectName" type="string" column="project_name" length="255"/>
    <field name="date" type="date" column="date"/>
    <one-to-many field="fiches" target-entity="Application\Refactor\ReferenceBundle\Entity\FicheBook" mapped-by="book">
      <cascade>
        <cascade-all/>
      </cascade>
    </one-to-many>
    <field name="created_at" type="datetime" column="created_at" nullable="false"/>
    <field name="updated_at" type="datetime" column="updated_at" nullable="true"/>
    <field name="published" type="boolean" column="published" length="1" nullable="false"/>
    <lifecycle-callbacks>
      <lifecycle-callback type="prePersist" method="prePersist"/>
      <lifecycle-callback type="preUpdate" method="preUpdate"/>
    </lifecycle-callbacks>
  </entity>
</doctrine-mapping>
