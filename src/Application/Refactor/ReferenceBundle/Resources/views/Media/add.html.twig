{% extends "ApplicationRefactorReferenceBundle::layout.html.twig" %}
{% block media_active %}class="active"{% endblock %}
{% block body %}
{{ form_start(form, {'method': 'POST'}) }}
{{ form_errors(form) }}
<section class="media-add container">
	{{ form_start(form)}}
		<div class="row">
			<div class="jumbotron col-lg-12" style="padding:20px;">
				<div class="col-lg-6">
		      		{{form_row(form.name)}}
		      		{{form_row(form.providerName)}}
		      		{{form_row(form.binaryContent)}}
	      		</div>
	      		<div class="col-lg-6">
		      		{{form_row(form.description)}}
	      		</div>
	  			<div style="display:none;">
					{{ form_rest(form) }}
				</div>
				<input class="btn btn-default" type="submit" value="{{ 'Validate'|trans }}"/>
			</div>
		</div>
	{{ form_end(form) }}
</section>
{% endblock %}
