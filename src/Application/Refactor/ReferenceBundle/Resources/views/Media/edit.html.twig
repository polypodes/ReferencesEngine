{% extends "::layout.html.twig" %}
{% block media_active %}class="active"{% endblock %}
{% block body %}
{{ form_start(form, {'method': 'POST'}) }}
{{ form_errors(form) }}
<div class = "item-container">
	{{ form_start(form)}}
	<div class="row">
			<div class="jumbotron col-lg-12" style="padding:20px;">
			<div class="col-lg-6">
	      		<p>{{ 'Name'|trans }} : {{form_widget(form.name)}}</p>
	      		</div>
	      		<div class="col-lg-6">
	      		<p>{{ 'Description'|trans }} :</p>
	      		<p>{{form_widget(form.description, {'attr' : { 'style' :'width:500px;max-width:5000px;min-height:250px;'}})}}</p>
	      		</div>
	      			<div style="display:none;">
		{{ form_rest(form) }}
	</div>
<input class="btn btn-default" type="submit" value="{{ 'Validate'|trans }}"/>
			</div>
			</div>
	</div>

</div>
{{ form_end(form) }}
{% endblock %}
