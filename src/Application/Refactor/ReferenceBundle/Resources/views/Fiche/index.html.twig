{% extends "::layout.html.twig" %}
{% block project_active %}class="active"{% endblock %}
{% block body %}
<p>
	<h2>
		<div class="row">
		    <div class="col-lg-4">
		    	Liste des projets :
		    </div>
		    <div class="col-lg-4">
		    	<form class="form-inline" role="form">
  					<div class="form-group">
    					<input type="text" class="form-control" id="Tags" placeholder="Client, AnnÃ©e">
  					</div>
  					<button type="submit" class="btn btn-default">
  						Recherche
  					</button>
		  		</form>
			</div>
		</div>
	</h2>
</p>
<div class = "item-container">
	<div class="row">
		<div class="col-lg-4">
			<div class="thumbnail project">
	      		<div class="caption" style="text-align:center;">
	      		<a href="{{ path('refactor_add_projects') }}">
					<span type="button" class="btn btn-primary btn-lg">Nouveau Projet</span>
					</a>
			</div>
			</div>
		</div>
	{% for project in projects %}
	  	<div class="col-lg-4">
	    	<div class="thumbnail project-mouseover project">
	    		<div class="project-img">
	    		{% media project.image, 'thumbnail' %} 
	    	</div>
	      		<div class="caption project-btn">
	      			<h2>{{project.title}}
	      				<div>
	      					<small>{{project.title}}</small>
	        			</div>
	        		</h2>	
	        			<p>
		        			<a href="#" class="btn btn-primary btn-lg btn-block" role="button">
			        			<span class="glyphicon glyphicon-plus"></span>
			        			<span class="glyphicon-class" style="color:white;">Ajouter au cahier</span>
		          			</a>
		          		</p>
		          		<p>
		        			<a href="{{ path('refactor_edit_projects', {'id': project.id}) }}" class="btn btn-warning col-md-4 btn-sm " role="button">
			        			<span class="glyphicon glyphicon-edit"></span>
			        			<span class="glyphicon-class" style="color:white;">Modifier</span>
		          			</a>
		          			<a href="{{ path('refactor_show_projects', {'id': project.id}) }}" class="btn btn-success col-md-4 btn-sm" role="button">
			        			<span class="glyphicon glyphicon-edit"></span>
			        			<span class="glyphicon-class" style="color:white;">Afficher</span>
		          			</a>
				        	<a class="label-danger btn btn-remove col-md-4 btn-sm" role="button" data-id = "{{project.id}}" data-title="{{project.title}}">
				        		<span class="glyphicon glyphicon-remove"></span>
				        		<span class="glyphicon-class" style="color:white;" data-layout="center" data-type="confirm">Suprimer</span>
				        	</a>
			       		</p>
			    </div>
			</div>
		</div>
	{% endfor %}
	</div>
</div>
{% endblock %}