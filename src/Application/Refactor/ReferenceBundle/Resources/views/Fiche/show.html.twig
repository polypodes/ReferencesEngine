{% extends "::layout.html.twig" %}
{% block body %}
<p>
	<h2>
		<div class="row">
		    <div class="col-lg-4">
		    	{{project.title}}
		    </div>
		    <div class="col-lg-2">
			    <a href="{{ path('refactor_edit_projects', {'id': project.id}) }}" class="btn label-warning btn-lg" role="button">
					<span class="glyphicon glyphicon-edit"></span>
					<span class="glyphicon-class" style="color:white;">Modifier</span>
				</a>
			</div>
		</div>
	</h2>
</p>
<div class="jumbotron col-lg-9" style="padding:20px;">
	<div class="container" style="padding:0px;">

		<div class="col-6 col-sm-6 col-lg-8">
			<a id ="single_1" rel="group" href="{% path project.image, 'reference' %}" title="{{project.title }}">
	<img id ="Main_image" src="{% path project.image, 'big' %}" ></a>
		</div>
		<div class="col-6 col-sm-6 col-lg-4">
			<p>
			<h3>
				<span class = "value-form">
						{{project.title2}}
				</span>
		<!-- 		<a href="#" class="btn btn-default btn-xs btn-edit" role="button"><span class="glyphicon glyphicon-pencil"></span></a> -->
			</h3>
			</p>
			<p>{{project.date|date("d M Y")}}</p>
			<p>{{project.content}}</p>
		</div>
	</div>
</div>
<div class="col-6 col-sm-6 col-lg-3">
	<p>
		<div class="checkbox">
	   		<label>
	   			<input type="checkbox"
	   			{% if project.published == true %}
	   				checked
				{% endif %}
				>
				<h3>Project published</h3>
	   		</label>
		</div>
	</p>
	<div>
		<h3>Tags :
			<p><small>
				Comma between each tag
			</small></p>
		</h3>
		<h4>
		{% for tag in project.tags %}
		{{tag}},
		{% endfor %}
		</h4>
	</div>
	<div>
		<h3>Medias Compl√©mentaire</h3>
		{% for media in project.medias %}
			<p>
				{% thumbnail media, 'small' %}
				{% if media.providerName == "sonata.media.provider.image" or media.providerName == "sonata.media.provider.file" %}
				<a href="{% path media , 'reference' %}">{{media.name }}</a>
				{% else %}
				<a href="{{ path('sonata_media_download', {'id': media|sonata_urlsafeid }) }}">{{media.name }}</a>
				{% endif %}
			</p>
		{% endfor %}

	</div>
</div>

<div class="row">
	<div class="jumbotron col-lg-9" style="padding:20px;">
		{% for render in project.renders %}
			<div class="col-xs-6 col-md-3">
				<div class="thumbnail">
					<a class="fancybox" rel="group" href="{% path render, 'reference' %}" title="{{render.name }}">
						<img src="{% path render, 'small' %}">
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
</div>




{% endblock %}
