{% extends "ApplicationRefactorReferenceBundle::layout.html.twig" %}

{% block book_active %}class="active"{% endblock %}

{% block body %}
<div class = "item-container">
	{{ form_start(form)}}
	<div class="row">
		<div class="col-lg-4">
			<div class="thumbnail project">

	      		{{ form_row(form.title) }}
	      		{{ form_row(form.clientName) }}
	      		{{ form_row(form.date) }}
	      		{{ form_row(form.published) }}

				<input class="btn btn-default" type="submit" value="{{ 'Validate'|trans }}"/>
			</div>
		</div>

		<ul class="projects" data-prototype="{{form_widget(form.fiches.vars.prototype)|e }}">
			{% for project in projects %}
			<li>
			  	<div class="col-lg-4">
			    	<div class="thumbnail project-mouseover project">
			    		<input type="hidden" name="projects[]" value="{{project.id}}">
			    		<div class="project-img img">
				    		{% media project.image, 'thumbnail' %}
				    	</div>
			      		<div class="caption project-btn">
			      			<h2>{{project.title}}</h2>
		      				<div>
		      					<small>{{project.title}}</small>
		        			</div>

			          		<div>
			        			<a href="{{ path('refactor_edit_projects', {'id': project.id}) }}" class="btn btn-warning col-md-4 btn-sm " role="button">
				        			<span class="glyphicon glyphicon-edit"></span>
				        			<span class="glyphicon-class" style="color:white;">{{ 'Change'|trans }}</span>
			          			</a>
			          			<div class="col-md-4"> </div>

					        	<a class="label-danger btn btn-remove col-md-4 btn-sm" role="button" data-id = "{{project.id}}" data-title="{{project.title}}">
					        		<span class="glyphicon glyphicon-remove"></span>
					        		<span class="glyphicon-class" style="color:white;" data-layout="center" data-type="confirm">{{ 'Delete'|trans }}</span>
					        	</a>
				       		</div>
					    </div>
					</div>
				</div>
			</li>
			{% endfor %}

		</ul>
	</div>
	<div class="hidden">
		{# form_rest(form) #}
	</div>
	{{ form_end(form) }}
</div>
{% endblock %}
